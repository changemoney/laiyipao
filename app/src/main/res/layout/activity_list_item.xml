<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?bg_list_item"
    android:paddingBottom="20.0dip"
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:paddingTop="20.0dip">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:textColor="?label_activity_item"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="?label_activity_item"
        android:textSize="13.0sp" />

    <TextView
        android:id="@id/content_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/user_count"
        android:layout_below="@id/title"
        android:textColor="?label_activity_item_content_count"
        android:textSize="13.0sp" />

    <ImageView
        android:id="@id/banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_count"
        android:layout_marginTop="10.0dip"
        android:scaleType="fitXY" />
</RelativeLayout>