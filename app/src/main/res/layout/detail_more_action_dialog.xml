<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:DotIndicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?more_action_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip"
        android:text="@string/action_dialog_title"
        android:textColor="@color/more_action_dialog_title"
        android:textSize="18.0sp" />

    <com.ss.android.common.ui.view.SSViewPager
        android:id="@id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/detail_more_dlg_valid_two_row_height" />

    <com.ss.android.common.ui.view.DotIndicator
        android:id="@id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip"
        DotIndicator:diameter="8.0dip"
        DotIndicator:selected_color="?indicator_selected"
        DotIndicator:unselected_color="?indicator_unselected" />

    <View
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="24.0dip"
        android:layout_marginRight="24.0dip"
        android:background="?list_item_divider" />

    <LinearLayout
        android:id="@id/actions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15.0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@id/action1"
            style="@style/more_action_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center" />

        <TextView
            android:id="@id/action2"
            style="@style/more_action_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center" />

        <TextView
            android:id="@id/action3"
            style="@style/more_action_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center" />

        <TextView
            android:id="@id/action4"
            style="@style/more_action_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@id/cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.0dip"
        android:layout_marginLeft="24.0dip"
        android:layout_marginRight="24.0dip"
        android:layout_marginTop="20.0dip"
        android:background="?cancel_popover"
        android:gravity="center"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="@string/cancel"
        android:textColor="?more_action_dialog_cancel"
        android:textSize="18.0sp" />
</LinearLayout>